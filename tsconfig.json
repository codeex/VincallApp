{
  "compilerOptions": {
    "outDir": "./dist/",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "module": "ESNext",
    "target": "es5",
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "strict": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "paths": {
      "src/*": ["*"]
    }
  },
  "include": ["src/", "index.d.ts"],
  "exclude": ["node_modules"]
}
